{% extends 'base.html.twig' %}

{% block body %}
    <h1>OrderCustom</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ orderCustom.id }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ orderCustom.ref }}</td>
            </tr>
            <tr>
                <th>Datecreated</th>
                <td>{% if orderCustom.datecreated %}{{ orderCustom.datecreated|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ordercustom_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ordercustom_edit', { 'id': orderCustom.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
